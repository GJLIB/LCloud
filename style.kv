<WeatherScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '20sp'
        MDTopAppBar:
            title: "LCloud"
            right_action_items: [["dots-vertical", lambda x: app.callback()]]
        MDBoxLayout:
            size_hint: 0.7, None
            pos_hint: {'center_x': 0.5}
            MDTextField:
                hint_text: "Fill mode"
                mode: "fill"
            MDIconButton:
                icon: "map-search-outline" 
                icon_size: "32sp"
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.9, 0.5
            MDLabel:
                text: '14*C'
                font_style: 'H2'
                halign: 'center'
