<WeatherScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '20sp'
        MDTopAppBar:
            title: "LCloud"
            right_action_items: [["dots-vertical", lambda x: app.callback()]]
        MDBoxLayout:
            size_hint: 0.7, None
            pos_hint: {'center_x': 0.5}
            MDTextField:
                id: city
                hint_text: "Fill mode"
                mode: "fill"
            MDIconButton:
                id: search_btn
                on_press: root.search()
                icon: "map-search-outline" 
                icon_size: "32sp"
            AsyncImage:
                id: icon 
                size: ("150sp", "150sp")
                fit_mode: 'contain'
                source: 
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_x': 0.5}
            size_hint: 0.9, 0.5
            MDLabel:
                id: temp
                text: '14*C'
                font_style: 'H2'
                halign: 'center'
            MDLabel:
                id: feels_like
                text: "Відчувається як"
                font_style: 'H4'
                halign: 'center'
            MDLabel:
                id: desc
                text: "Ясно"
                font_style: 'H4'
                halign: 'center'
            MDLabel:
                id: wind
                text: "Вітер:"
                font_style: 'H4'
                halign: 'center'
            MDLabel:
                id: humidity
                text: "Вологість:"
                font_style: 'H4'
                halign: 'center'
            Widget:
                size_hint_y: None
                height: '50sp'
            MDFillRoundFlatButton:
                text: "Дивитися прогноз"
                pos_hint: {'center_x': 0.5}
                on_press: root.show_forecast()
            Widget:
                size_hint_y: None
                height: '50sp'

<ForecastScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '20sp'
        MDTopAppBar:
            title: "Прогнози погоди"
            left_action_items: [["arrow-left", lambda x: root.back()]]
        ScrollView:
            MDBoxLayout:
                id: weather_list
                orientation: 'vertical'
                pos_hint: {'center_x': 0.5}
                size_hint: 0.9, 0.4

<WeatherCard>:
    padding: 4
    size_hint: 0.9, None
    size_y: "100dp"
    MDBoxLayout:
        
        padding: 10